# Configuration API - BinomePay
# Copiez ce fichier vers .env et configurez vos variables

# URL de base de votre API backend
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Configuration Supabase (optionnel si vous utilisez Supabase)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Configuration Clerk (authentification)
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-key

# Environnement (development, staging, production)
NODE_ENV=development

# Configuration des notifications push
EXPO_PUBLIC_PUSH_TOKEN=your-expo-push-token

# Configuration pour les tests
EXPO_PUBLIC_MOCK_API=false

# Configuration pour le d√©veloppement local
EXPO_PUBLIC_DEV_MODE=true