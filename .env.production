# Configuration BinomePay - Production
# Variables d'environnement pour le déploiement Play Store

# Mode production - API réelle obligatoire
EXPO_PUBLIC_MOCK_API=false
NODE_ENV=production
EXPO_PUBLIC_DEV_MODE=false

# Configuration API Backend (À CONFIGURER AVANT LE BUILD)
EXPO_PUBLIC_API_URL=https://api.binomepay.com/v1

# Configuration Supabase (si utilisé)
EXPO_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key

# Configuration Clerk Production
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your-production-key

# Configuration des notifications push
EXPO_PUBLIC_PUSH_TOKEN=your-expo-push-token-production

# Analytics et monitoring (optionnel)
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn
EXPO_PUBLIC_ANALYTICS_ID=your-analytics-id

# Configuration de sécurité
EXPO_PUBLIC_ENABLE_LOGGING=false
EXPO_PUBLIC_DEBUG_MODE=false